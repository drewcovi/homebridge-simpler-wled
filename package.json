{
  "name": "homebridge-simpler-wled",
  "displayName": "Simpler WLED",
  "version": "2.0.2",
  "description": "Homebridge plugin for WLED LED controllers",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist coverage",
    "lint": "eslint src/**.ts",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:verbose": "jest --verbose --forceExit",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --forceExit",
    "test:unit": "jest tests/wledDevice.test.ts tests/discoveryService.test.ts tests/platform.test.ts tests/settings.test.ts --forceExit",
    "prebuild": "npm run lint && npm run test:unit",
    "build": "npm run clean && tsc && npm run build:ui",
    "build:ui": "tsc -p homebridge-ui/tsconfig.json && cp -r homebridge-ui/public dist/homebridge-ui/",
    "prepublishOnly": "npm run build",
    "watch": "npm run build -- --watch"
  },
  "engines": {
    "node": ">=14.0.0",
    "homebridge": ">=1.3.0"
  },
  "keywords": [
    "homebridge-plugin",
    "wled",
    "led",
    "light",
    "esp8266",
    "esp32",
    "homekit"
  ],
  "author": "Drew Covi",
  "license": "MIT",
  "homepage": "https://github.com/drewcovi/homebridge-simpler-wled#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/drewcovi/homebridge-simpler-wled.git"
  },
  "bugs": {
    "url": "https://github.com/drewcovi/homebridge-simpler-wled/issues"
  },
  "homebridge-plugin-ui": {
    "pluginAlias": "WLED",
    "customUiPath": "./dist/homebridge-ui"
  },
  "dependencies": {
    "@homebridge/plugin-ui-utils": "^1.0.3",
    "axios": "^1.6.0",
    "dnssd": "^0.4.1",
    "node-persist": "^3.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/dnssd": "^0.4.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.130",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios-mock-adapter": "^2.1.0",
    "chai": "^6.2.2",
    "eslint": "^8.0.0",
    "homebridge": "^1.6.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0",
    "ws-mock": "^0.1.0"
  }
}
